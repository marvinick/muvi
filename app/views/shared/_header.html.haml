%section#top-header.row
  %h1.col-md-2
    = link_to "Muvi", root_path
  - if current_user
    %ul.col-md-3.clearfix
      %li= link_to "Films"
      %li= link_to "The Queue", my_queue_path
      %li= link_to "People", users_path
    = form_tag search_videos_path, class: "form.col-md-5 navbar-form" do
      .form-group
        %input.search_query(name="search_term" type="text" placeholder="Search for videos here")
      %button.btn.btn-success(type="submit") Search
      #user_links.pull-right
        %ul
          %li.dropdown
            %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
              Welcome, #{current_user.full_name}
              %b.caret
            %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
              %li
                %a(href="#") Account
                %a(href="#") Plan and Billing
                = link_to "Sign Out", sign_out_path
